.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
    width:22%;
    justify-content: center;
    text-align: center;
}

.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  background: #4876FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}
.text {
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 90%;
  height: 120rpx;
  line-height: 100rpx;
  margin: 20rpx auto;
  color: #000;
  background-color: #fff;
  font-size: 36rpx;
}
.warn {
  width: 100%;
  height: 20%;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-family: '宋体';
  font-size: 28rpx;
  color: #8b9397;
  text-align: center;
  line-height: 48rpx;
}
.xhz_btn{
  width: 100%;
}
.xhz_right{
  width: 43%;
  margin: 30rpx 30rpx;
  float: left;
}
.xhz_left{
  float: right;
  width: 43%;
  margin: 30rpx 20rpx;
}